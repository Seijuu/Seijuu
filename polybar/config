[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 29
;offset-x = 1%
;offset-y = 1%
radius = 3
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 5
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Cascadia Mono:style=Bold:size=9
font-1 = NotoColorEmoji:fontformat=truetype:scale=10
font-2 = Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular:pixelsize=10;1
font-3 = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:pixelsize=10;1
font-4 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:pixelsize=10;1
font-5 = siji:pixelsize=10;1

modules-left = bspwm
modules-center = 
modules-right = pulseaudio crypto memory-info cpu updates-ubuntu date powermenu

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm
;wm-restack = i3

override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/powermenu]

type = custom/menu
expand-right = true
format-spacing = 1
format-underline = #d5d6db
label-open = "Session"
label-close = "Close"
label-separator = |
menu-0-0 = "Reboot"
menu-0-0-exec = menu-open-1
menu-0-1 = "Power off"
menu-0-1-exec = menu-open-2
menu-0-2 = "Log out"
menu-0-2-exec = menu-open-3
menu-1-0 = "Reboot"
menu-1-0-exec = reboot
menu-1-1 = "Cancel "
menu-1-1-exec = menu-open-0
menu-2-0 = "Power off"
menu-2-0-exec = poweroff
menu-2-1 = "Cancel "
menu-2-1-exec = menu-open-0
menu-3-0 = "Log out"
menu-3-0-exec = bspc quit
menu-3-1 = "Cancel "

menu-3-1-exec = menu-open-0

[module/crypto]
type = custom/script
interval = 60
exec = /home/christopher/.config/polybar/crypto.py
format-underline = #2ac3de

[module/updates-ubuntu]
type = custom/script
exec = bash ~/.config/polybar/scripts/updates-ubuntu.sh
format = <label>
format-prefix = "📦 "
label = %output%
interval = 600
format-underline = #9ece6a
click-left = gnome-terminal "sudo apt upgrade" &

[module/memory-info]
type = custom/script

exec = bash ~/.config/polybar/scripts/memory.sh
click-left = bash ~/.config/polybar/scripts/memory.sh --popup
format-prefix = "🧠 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #ff9e64

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

; Separator in between workspaces
; label-separator = |

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "💻 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f7768e
label = %percentage:2%%

[module/date]
type = internal/date
interval = 1

date-alt = "%d/%m/%Y"

time = "%H:%M"
time-alt = "%H:%M:%S"

format-prefix-foreground = ${colors.foreground-alt}
format-underline = #bb9af7

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}
format-underline = #ff9e64

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

